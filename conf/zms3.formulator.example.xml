<onChangeJS>
<lang id="ger"><![CDATA[var div_birthday = $("div[data-schemapath$='root.BIRTHDAY']");

// Show hint on error at form item
if (ZMSFormulator.getValue().BIRTHDAY==='') {
    if (div_birthday.find("p[class^='help-block']").length===0) {
        div_birthday.append('<p class="help-block">'+JSONEditor.defaults.translate('hint_checkbirthday')+'</p>');
    }
}
else {
    div_birthday.find("p[class^='help-block']").remove();
}]]></lang></onChangeJS>
<dataStorageDisabled>0</dataStorageDisabled>
<onReadyJS>
<lang id="ger"><![CDATA[// Disable part of the form
ZMSFormulator.getEditor('root.MESSAGE').disable();

// Get/Set Value
var msg = ZMSFormulator.getEditor('root.MESSAGE');
if(msg) {
  msg.setValue("Hello World!\nHello Europe!\nHello America!");
  console.log(msg.getValue());
}

// Custom validators must return an array of errors 
// or an empty array if valid
JSONEditor.defaults.custom_validators.push(function(schema, value, path) {
  var errors = [];
  if(path==="root.BIRTHDAY") {
      if (ZMSFormulator.getValue().BIRTHDAY==='') {
        // Errors must be an object with `path`, `property`, and `message`
        errors.push({
          path: path,
          property: 'format',
          message: JSONEditor.defaults.translate('hint_checkbirthday')
        });   
      }
  }
  return errors;
});]]></lang></onReadyJS>
<attr_dc_coverage><![CDATA[global.ger]]></attr_dc_coverage>
<optionsJS>
<lang id="ger"><![CDATA[// Set options
ZMSFormulator.options.no_additional_properties = true;
ZMSFormulator.options.required_by_default = true;

// Additional dictionary for translations
JSONEditor.defaults.languages.en['hint_checkbirthday']  = 'Please check the birtday!';
JSONEditor.defaults.languages.ger['hint_checkbirthday'] = 'Bitte geben Sie das Geburtsdatum an!';

// This is the starting value for the editor
// We will use this to seed the initial editor 
// and to provide a "Restore to Default" button.
ZMSFormulator.options.startval = {
  "MESSSAGE" : "Will be set via onReady-Javascript below...",
  "NAME" : "John Smith",
  "AGE" : 35,
  "GENDER" : "male",
  "LOCATION" : {
    "CITY" : "San Francisco",
    "STATE" : "California",
    "CITYSTATE" : ""
  },
  "PETS" : [ {
    "NAME" : "Spot",
    "TYPE" : "dog",
    "FIXED" : true
  }, {
    "NAME" : "Whiskers",
    "TYPE" : "cat",
    "FIXED" : false
  } ],
  "INTERESTS" : ["Hiking","Biking"],
  "MEMBERSHIPS" : ["ABC", "GHI"]
};]]></lang>
<lang id="fra"><![CDATA[// Disable additional properties
ZMSFormulator.options.no_additional_properties = true;

// Require all properties by default
ZMSFormulator.options.required_by_default = true;]]></lang>
<lang id="eng"><![CDATA[// Disable additional properties
ZMSFormulator.options.no_additional_properties = true;

// Require all properties by default
